<!DOCTYPE html>
<html lang="en">
    {{> head title='Detalles de ticket'}}
    <body class="bg-main-color">
        <div class="wrapper h-100">
            <div id="content" class="d-flex align-items-center pb-5 pt-5 h-100 text-center">
                <div class="responsive-card">
                    <div class="card p-3">
                        <div class="card-body d-md-flex justify-content-between d-block">
                            <div class="pr-5 pr-md-4 pl-5 pl-md-2 col-md-4 col-12 d-flex align-items-center responsive-split-border">
                                <img src="{{ img }}" alt="" class="w-100 mb-3 mb-md-0">
                            </div>
                            <div class="pl-md-4 col-md-8 col-12 mt-3 mt-md-0 d-flex align-items-center">
                                <div class="w-100">
                                    <h1 class="h3 mb-3 font-weight-normal" id="lblDetallesTicket">
                                        Ticket {{ numeroTicket }}
                                    </h1>
                                    <p id="turnoActual"></p>
                                    <p id="tiempoFaltante"></p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {{> scripts}}
        <script>
            var numeroTicket = {{ numeroTicket }};
        </script>
        <script src="socket.io/socket.io.js"></script>
        <script src="js/socket.detalles-ticket.js"></script>
    </body>
</html>
